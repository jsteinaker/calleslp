<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    >
	<EditText
		android:id="@+id/edt_calle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:inputType="number"
		android:hint="@string/edt_calle"
		/>
	<EditText
		android:id="@+id/edt_altura"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:inputType="number"
		android:hint="@string/edt_altura"
		/>
	<CheckBox
		android:id="@+id/chk_diagonal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/chk_diagonal"
		/>
	<CheckBox
		android:id="@+id/chk_tolosa"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/chk_tolosa"
		/>
	<Button
		android:id="@+id/btn_calcular"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/btn_calcular"
		android:onClick="calcular"
		/>
	<TextView
		android:id="@+id/txt_resultado"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/txt_resultado"
		/>
</LinearLayout>

